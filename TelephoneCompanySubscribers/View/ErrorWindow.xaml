<Window x:Class="TelephoneCompanySubscribers.View.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneCompanySubscribers.View"
        mc:Ignorable="d"
        Title="" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="ERROR" Grid.Row="0" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="10" />

        <TextBlock Text="{Binding ErrorMessage}" Grid.Row="1" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="10" TextWrapping="Wrap" />
    </Grid>
</Window>
